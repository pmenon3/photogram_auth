<h3>
  <%= current_user.username %>

  <%= @user.id %>
</h3>

<% @photos.each do |photo| %>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Photo</th>
        <th>Caption</th>
        <th>Action</th>
      </tr>
      <tr>
        <td><img src="<%= photo.image %>"></td>
        <td><%= photo.caption %></td>

        <td>
          <a href="/users/<%= @user.id %>" class="btn btn-primary">Show</a>
          <a href="/users/<%= @user.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_user/<%= @user.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
